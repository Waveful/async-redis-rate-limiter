{
  "name": "async-redis-rate-limiter",
  "description": "Rate-limit in Node.js, backed by Redis.",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "author": "Waveful",
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "build/index.js",
  "files": [
    "build/**/*"
  ],
  "keywords": [
    "rate limiter",
    "rate limit",
    "throttle",
    "limiting"
  ],
  "scripts": {
    "build": "rm -rf build && tsc -p .",
    "lint": "tslint -p tsconfig.json",
    "prettier": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "start-background-redis": "chmod +x ./.scripts/start-background-redis-server.sh && sh ./.scripts/start-background-redis-server.sh",
    "stop-background-redis": "chmod +x ./.scripts/stop-redis-server.sh && sh ./.scripts/stop-redis-server.sh",
    "test": "npm run start-background-redis && mocha --recursive --require ts-node/register 'test/**/*.ts' && npm run stop-background-redis",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test",
    "prepare": "npm run build",
    "preversion": "npm test && npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "create-patch-version": "npm version patch && npm publish",
    "create-minor-version": "npm version minor && npm publish",
    "create-major-version": "npm version major && npm publish"
  },
  "repository": "Waveful/async-redis-rate-limiter",
  "dependencies": {
    "redis": "4.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "custom-uuid": "^2.2.2",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.6.0",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.2"
  }
}
